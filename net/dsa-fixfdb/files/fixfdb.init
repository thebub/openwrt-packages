#!/bin/sh /etc/rc.common

START=99
USE_PROCD=1
PROG=/usr/bin/fixfdb

start_service() {
	local bridge_name

	config_load fixfdb
	config_get bridge_name fixfdb bridge-name br-lan

    procd_open_instance
    procd_set_param command $PROG
	procd_append_param command $bridge_name
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}
